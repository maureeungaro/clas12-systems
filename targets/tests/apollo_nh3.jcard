{
	# no nthreads specified: runs on all available threads
	# uncomment this line to specify number of threads
	# "nthreads": 4,
	
	# verbosities
	"verbosity": 1,
	"g4displayv": 2,
	"gsystemv": 1,
	"g4systemv": 2,
	
	# the target system
	"+gsystem": [
		{
			"system":   "./clas12Target",
			"factory": "TEXT",
			"variation": "apollo_nh3"
		}
	],

	"+goutput": [
		{
			"format": "ROOT",
			"name": "events.root",
			"type": "event"
		},
		{
			"format": "TEXT",
			"name": "events.txt",
			"type": "event"
		}
	],
	
	"n": 1000,
	"+gparticle": [
		{ "pname": "pi0", "multiplicity": 1,  "p": 300,  "theta": 1.0, "delta_phi": 180.0, "vz": -20.0}
	]

}
